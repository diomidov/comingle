#react-root
  position: absolute
  left: 0
  right: 0
  top: 0
  bottom: 0

iframe
  width: 100%
  height: 100%
  overflow: hidden
  position: absolute

nav
  display: flex
  justify-content: center
  align-items: center
  background-color: #d6dcde  // .flexlayout__border_left
  padding: 3px 0

.RoomList
  .card
    overflow: visible  // allow timer to spill out of card
  .card-header
    padding: 0.25rem // 0.75rem
    text-align: center
    font-size: 80%
    font-weight: bold
    cursor: pointer
    .float-right
      margin: 0.25rem
  .card-body
    padding: 0
    .form-control
      margin: -1px
    .search-icon
      position: absolute
      right: 0.25rem
      margin: 0.25rem
      margin-top: 0.75rem
      font-size: 80%
      cursor: pointer

.room-info
  color: black
  &:hover
    color: #003e80
  &:active
    color: #0069d9

  &.room-info-visible
    background-color: #b8daff  // list-group-item-primary
  &.room-info-invisible
    background-color: hsl(220,6%,95%)  // list-group-item-secondary, but brighter

  .raise-hand
    float: right
    margin-right: -0.75rem
    z-index: 1
    opacity: 0.1
    &:hover
      opacity: 0.25
    &:active
      opacity: 0.5
    &.active
      opacity: 1.0
      &:hover
        opacity: 0.75
      svg
        transform: scale(1)
        animation: pulse 2s infinite ease-in-out
    .timer
      position: absolute
      transform: rotate(90deg)
      transform-origin: 0.55rem 0.75rem //0.65rem 0.65rem
      z-index: 1
      opacity: 1

  .presence
    font-size: small
    > span
      display: inline-block
      margin-right: 1rem
    > .presence-invisible
      color: rgba(0,0,0,0.333333333) // #aaa

@keyframes pulse
  0%
    transform: scale(1)
  50%
    transform: scale(1.2)
  100%
    transform: scale(1)
